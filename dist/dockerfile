FROM nginx:alpine 
# настройки сервера

WORKDIR /usr/share/nginx/html
#указываем рабочую директорию 

COPY . .
#копируем все файлы нашего сайта/проекта

EXPOSE 80
# указываем порт работы нашего сайта, и будет он рабоать на localhost:8080 или же 127.0.0.1:8080


CMD [ "nginx", "-g", "daemon off;" ]
#команда для запуска нащего проекта
